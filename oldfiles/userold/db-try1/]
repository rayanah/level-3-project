apiVersion: tekton.dev/v1beta1
kind: Pipeline
metadata:
  name: user-db-pipeline
spec:
  resources:
    - name: final
      type: git
  tasks:
    - name: build
      taskRef:
        name: user-db
      resources:
        inputs: 
        - name: user-db-pr
          resource: final
    - name: user-db-deploy-kubectl
      runAfter: ["build"]
      taskRef:
        name: user-db-deploy-kubectl
      resources:
        inputs:
        - name: user-db-pr
          resource: final
